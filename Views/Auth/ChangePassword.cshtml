@model hehehe.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to right, #2196F3, #BBDEFB);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .change-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        width: 350px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

    .change-container h2 {
        margin-bottom: 20px;
        text-align: center;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-submit {
        width: 100%;
        padding: 10px;
        background-color: #2196F3;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
    }

    .btn-submit:hover {
        background-color: #1976D2;
    }

    .message {
        color: red;
        text-align: center;
        margin-top: 10px;
    }
</style>

<div class="change-container">
    <h2>🔒 Đổi mật khẩu</h2>

    <form asp-action="ChangePassword" method="post">
        <input asp-for="MaNhapHoc" placeholder="Mã nhập học" required />
        <input asp-for="OldPassword" placeholder="Mật khẩu cũ" type="password" required />
        <input asp-for="NewPassword" placeholder="Mật khẩu mới" type="password" required />

        <button type="submit" class="btn-submit">Đổi mật khẩu</button>
    </form>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="message">Mật khẩu cũ không đúng.</div>
    }
</div>