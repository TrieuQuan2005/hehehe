@model hehehe.Models.UserForm
@{
ViewData["Title"] = "Nhập học thành công";
Layout = null;
var avatar = Model.UploadedFiles?.FirstOrDefault(f =>
f.EndsWith(".jpg", StringComparison.OrdinalIgnoreCase) ||
f.EndsWith(".jpeg", StringComparison.OrdinalIgnoreCase) ||
f.EndsWith(".png", StringComparison.OrdinalIgnoreCase))
?? "/images/default-avatar.png";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to right, #4caf50, #81c784);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 700px;
        margin: 60px auto;
        background: white;
        padding: 40px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 0 12px rgba(0,0,0,0.15);
    }

    .avatar {
        width: 160px;
        height: 160px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #4caf50;
        margin-bottom: 20px;
    }

    .info {
        font-size: 18px;
        margin: 10px 0;
        color: #333;
    }

    .success-message {
        font-size: 22px;
        color: #2e7d32;
        font-weight: bold;
        margin-top: 30px;
    }

    .btn-back {
        display: inline-block;
        margin-top: 40px;
        padding: 10px 20px;
        font-size: 16px;
        background: #4caf50;
        color: white;
        border: none;
        border-radius: 6px;
        text-decoration: none;
        : background 0.3s;
    }

    .btn-back:hover {
        background: #388e3c;
    }
</style>

    <div class="container">
    <img src="@avatar" alt="Ảnh sinh viên" class="avatar" />

    <div class="info"><strong>👤 Họ tên:</strong> @Model.HoTen</div>
    <div class="info"><strong>🎂 Năm sinh:</strong> @Model.NgaySinh.ToString("yyyy")</div>
    <div class="info"><strong>📚 Ngành học:</strong> @Model.NganhDaoTao</div>

    <div class="success-message">
        🎉 Chúc mừng bạn đã nhập học online thành công!
    </div>

    <a class="btn-back" href="/Form/FormNhapThongTin">🔁 Quay lại trang nhập</a>
</div>
