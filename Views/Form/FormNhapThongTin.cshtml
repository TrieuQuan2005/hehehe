@model hehehe.Models.StudentForm
@{
    ViewData["Title"] = "Form";
}

<h2>Form nhập thông tin - @ViewBag.Department</h2>

<form asp-action="FormNhapThongTin" method="post" enctype="multipart/form-data">
    <div>
        <label for="FullName">Họ và tên:</label>
        <input type="text" name="FullName" value="@Model?.FullName" required />
    </div>

    <div>
        <label for="StudentCode">Mã số sinh viên:</label>
        <input type="text" name="StudentCode" value="@Model?.StudentCode" required />
    </div>

    <div>
        <label for="Note">Ghi chú:</label>
        <textarea name="Note">@Model?.Note</textarea>
    </div>

    <div>
        <label for="uploadedFile">Upload file (PDF/PNG):</label>
        <input type="file" name="uploadedFile" accept=".pdf,.png" />
        @if (!string.IsNullOrEmpty(Model?.UploadedFilePath))
        {
            <p>File đã upload: <a href="@Model.UploadedFilePath" target="_blank">Xem file</a></p>
        }
    </div>

    <button type="submit">Lưu</button>
</form>

@if (ViewBag.Message != null)
{
    <p style="color:green">@ViewBag.Message</p>
}