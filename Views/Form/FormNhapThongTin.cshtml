@model hehehe.Models.UserForm

@{
    ViewData["Title"] = "Form nhập thông tin";
}

<h2>Form nhập thông tin ngành: @ViewBag.Department</h2>

<form asp-action="FormNhapThongTin" method="post" enctype="multipart/form-data">
    <div>
        <label for="HoTen">Họ và tên:</label>
        <input type="text" name="HoTen" value="@Model?.HoTen" required />
    </div>

    <div>
        <label for="NgaySinh">Ngày sinh:</label>
        <input type="date" name="NgaySinh" value="@Model?.NgaySinh.ToString("yyyy-MM-dd")" required />
    </div>

    <div>
        <label for="DiemThi">Điểm thi:</label>
        <input type="number" step="0.01" name="DiemThi" value="@Model?.DiemThi" required />
    </div>

    <div>
        <label for="uploadedFile">Upload file (PDF/PNG):</label>
        <input type="file" name="uploadedFile" accept=".pdf,.png" />
        @if (!string.IsNullOrEmpty(Model?.UploadedFilePath))
        {
            <p>File đã upload: <a href="@Model.UploadedFilePath" target="_blank">Xem file</a></p>
        }
    </div>

    <button type="submit">Lưu</button>
</form>

@if (TempData["Message"] != null)
{
    <p style="color:green">@TempData["Message"]</p>
}